<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Cabrera_Soledad_PruabaProgreso2.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Cabrera_Soledad_PruabaProgreso2"
    Shell.FlyoutBehavior="Flyout"
    Title="Cabrera_Soledad_PruabaProgreso2">

    <TabBar>
        <Tab Title="Recarga Telefónica"
             Icon="cell.png">
            <ShellContent
                Title="Teléfono"
                ContentTemplate="{DataTemplate local:PagianaTelefono}" />
        </Tab>

        <Tab Title="Información Personal"
             Icon="perrito.png">
            <ShellContent
                Title="Nombre"
                ContentTemplate="{DataTemplate local:PaginaNombre}" />
        </Tab>
    </TabBar>


</Shell>
