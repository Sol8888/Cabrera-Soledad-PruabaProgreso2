<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cabrera_Soledad_PruabaProgreso2.PaginaNombre"
             Title="PaginaNombre">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
    
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
         </Grid.ColumnDefinitions>

        <BoxView Grid.Row="0" Grid.Column="0" Color="LightBlue" />
        <BoxView Grid.Row="1" Grid.Column="0" Color="Lavender" />
        <BoxView Grid.Row="1" Grid.Column="1" Color="LemonChiffon" />
        <BoxView Grid.Row="0" Grid.Column="0" Color="LightCyan" />

        <Label Text="Daniela" Grid.Row="0" Grid.Column="0" Style="{StaticResource NombreEstilo}" />
        <Label Text="Cabrera" Grid.Row="0" Grid.Column="1" Style="{StaticResource ApellidoEstilo}" />

        <Label Text="Soledad" Grid.Row="1" Grid.Column="0" Style="{StaticResource NombreEstilo}" />
        <Label Text="Tapia" Grid.Row="1" Grid.Column="1" Style="{StaticResource ApellidoEstilo}" />
    </Grid>   
</ContentPage>