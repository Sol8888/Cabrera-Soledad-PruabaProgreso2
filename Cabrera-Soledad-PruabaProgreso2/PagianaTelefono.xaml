<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Cabrera_Soledad_PruabaProgreso2.PagianaTelefono"
             Title="PagianaTelefono">
    <StackLayout>
        <Label x:Name="scabrera_label1" Text="Ingrese su información:" FontSize="Medium" HorizontalOptions="Center" />

        <Entry x:Name="scabrera_entryNombre" Placeholder="Nombre" />
        <Entry x:Name="scabrera_entryTelefono" Placeholder="Número Telefónico" Keyboard="Telephone" />

        <Button x:Name="scabrera_buttonRecargar" Text="Realizar Recarga" Clicked="scabrera_buttonRecargar_Clicked" />

        <Label x:Name="scabrera_labelUltimaRecarga" Text="{Binding UltimaRecarga}" FontSize="Small" HorizontalOptions="Center" VerticalOptions="End" />
    </StackLayout>
</ContentPage>